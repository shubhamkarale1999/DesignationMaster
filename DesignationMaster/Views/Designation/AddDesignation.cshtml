@model DesignationMaster.Models.DesignationMasterViewModel

@{
    ViewData["Title"] = "New Designation";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="bg-primary text-white p-2 rounded text-center">
        <h4>New Designation</h4>
    </div>

    <form asp-action="AddDesignation" method="post" class="mt-4">

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">College</label>
            <div class="col-sm-9">
                <select asp-for="CollegeId" asp-items="ViewBag.CollegeList" class="form-select"></select>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Designation Code</label>
            <div class="col-sm-9">
                <input type="number" asp-for="DesignationCode" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Designation Acronym</label>
            <div class="col-sm-9">
                <input asp-for="DesignationAcronym" class="form-control" required />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Designation Name</label>
            <div class="col-sm-9">
                <input asp-for="DesignationName" class="form-control" required />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Stream</label>
            <div class="col-sm-9">
                <select asp-for="Stream" asp-items="ViewBag.StreamList" class="form-select"></select>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Roles & Responsibilities</label>
            <div class="col-sm-9">
                <textarea asp-for="RolesAndResponsibilities" class="form-control" required></textarea>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "Designation")" class="btn btn-outline-primary">Exit</a>
        </div>

    </form>
</div>
